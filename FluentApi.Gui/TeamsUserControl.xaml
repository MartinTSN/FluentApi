<UserControl x:Class="FluentApi.Gui.TeamsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FluentApi.Gui"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0"
                  Margin="10"
                  Header="Oversigt">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <DataGrid Margin="10"
                          x:Name="dataGridTeams"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Grid.Row="0"
                          SelectionChanged="DataGrid_Teams_SelectionChanged"
                          KeyDown="DataGrid_Teams_KeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Team Name"
                                            Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Beskrivelse"
                                            Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Start Dato"
                                            Binding="{Binding StartDate}" />
                        <DataGridTextColumn Header="Slut Dato"
                                            Binding="{Binding ExpectedEndDate}" />
                    </DataGrid.Columns>

                </DataGrid>
                <DataGrid Margin="10"
                          x:Name="dataGridEmployees"
                          AutoGenerateColumns="False"
                          Grid.Row="1"
                          IsReadOnly="True"
                          SelectionChanged="DataGrid_Employees_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Firstname"
                                            Binding="{Binding FirstName}" />
                        <DataGridTextColumn Header="Lastname"
                                            Binding="{Binding LastName}" />
                        <DataGridTextColumn Header="Salary"
                                            Binding="{Binding Salary}" />
                        <DataGridTextColumn Header="Mail"
                                            Binding="{Binding ContactInfo.Email}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1"
                  Header="Detaljer"
                  Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Label Content="Team Navn:"
                           Grid.Column="0"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           Margin="3" />
                    <TextBox Margin="3"
                             Grid.Column="1"
                             Text="{Binding TeamName}"
                             x:Name="textBoxTeamName" />
                    <Label Content="Beskrivelse:"
                           Grid.Column="0"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           Margin="3" />
                    <TextBox Margin="3"
                             Grid.Column="1"
                             Grid.Row="1"
                             Text="{Binding Description}"
                             x:Name="textBoxDescription" />
                    <Label Content="StartDato:"
                           Grid.Column="2"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           Margin="3" />
                    <DatePicker Grid.Column="3"
                                Grid.Row="0"
                                Margin="3"
                                FirstDayOfWeek="Monday"
                                SelectedDate="{Binding StartDate}"
                                x:Name="datePickerStartDate" />
                    <Label Content="Forventet SlutDato:"
                           Grid.Column="2"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           Margin="3" />
                    <DatePicker Grid.Column="3"
                                Grid.Row="1"
                                Margin="3"
                                FirstDayOfWeek="Monday"
                                SelectedDate="{Binding [ExpectedEndDate]}"
                                x:Name="datePickerEndDate" />
                    <Button Grid.Row="2"
                            Grid.Column="2"
                            Margin="3"
                            IsEnabled="False"
                            x:Name="buttonEditTeam">
                        <TextBlock TextAlignment="Center"
                                   TextWrapping="Wrap">Rediger Team</TextBlock>
                    </Button>
                    <Button Grid.Row="2"
                            Grid.Column="3"
                            Margin="3"
                            IsEnabled="False"
                            x:Name="buttonAddTeam"
                            Click="Button_AddTeam_Click">
                        <TextBlock TextAlignment="Center"
                                   TextWrapping="Wrap">Tilføj Team</TextBlock>
                    </Button>

                </Grid>
                <Line Grid.Row="1"
                      Stroke="Gray"
                      StrokeThickness="5"
                      X1="0"
                      Y1="10"
                      X2="1000"
                      Y2="10" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="6"
                            Grid.Column="2"
                            Margin="3"
                            IsEnabled="False"
                            x:Name="buttonAddToTeam"
                            Click="Button_AddToTeam_Click">
                        <TextBlock TextAlignment="Center"
                                   TextWrapping="Wrap">Tilføj Ansat til Team</TextBlock>
                    </Button>
                    <Button Grid.Row="6"
                            Grid.Column="3"
                            Margin="3"
                            IsEnabled="False"
                            x:Name="buttonRemoveFromTeam"
                            Click="Button_RemoveFromTeam_Click">
                        <TextBlock TextAlignment="Center"
                                   TextWrapping="Wrap">Fjern Ansat fra Team</TextBlock>
                    </Button>
                    <Button Grid.Row="6"
                            Grid.Column="0"
                            Margin="3"
                            x:Name="buttonShowAllEmployees"
                            Click="Button_ShowAllEmployees_Click">
                        <TextBlock TextAlignment="Center"
                                   TextWrapping="Wrap">Vis alle Ansatte</TextBlock>
                    </Button>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
