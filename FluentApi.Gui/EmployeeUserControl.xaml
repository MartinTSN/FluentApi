<UserControl x:Class="FluentApi.Gui.EmployeeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FluentApi.Gui"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0"
                  Margin="10"
                  Header=" Oversigt ">
            <Grid>
                <DataGrid Margin="10"
                          x:Name="dataGridEmployees"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionChanged="DataGrid_Employees_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Navn"
                                            Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Mail"
                                            Binding="{Binding ContactInfo.Email}" />
                        <DataGridTextColumn Header="Telefon"
                                            Binding="{Binding ContactInfo.Phone}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1"
                  Header=" Detaljer "
                  Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Margin="10"
                            Grid.Row="0"
                            DataContext="selectedEmployee">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Content="Navn:"
                               Grid.Column="0"
                               Grid.Row="0"
                               HorizontalAlignment="Right" />
                        <TextBox DataContext="selectedEmployee"
                                 Margin="3"
                                 Grid.Column="1"
                                 Text="{Binding Name}"
                                 x:Name="textBoxEmployeeName" />
                        <Label Content="Ansættelses dato:"
                               Grid.Column="0"
                               Grid.Row="1"
                               HorizontalAlignment="Right" />
                        <DatePicker Grid.Column="1"
                                    Grid.Row="1"
                                    Margin="3"
                                    x:Name="datePickerEmployeeStartDate" />
                    </Grid>
                    <Button Content="Opdater/Gem Ny"
                            Width="125"
                            HorizontalAlignment="Right"
                            x:Name="buttonUpdateEmployee"
                            Margin="0,100,0,0" />
                </StackPanel>

                <Line Grid.Row="1"
                      Stroke="Gray"
                      StrokeThickness="5"
                      X1="0"
                      Y1="10"
                      X2="1000"
                      Y2="10" />
                <StackPanel Margin="10"
                            Grid.Row="2"
                            DataContext="selectedEmployee">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Content="Mail:"
                               Grid.Column="0"
                               Grid.Row="0"
                               HorizontalAlignment="Right" />
                        <TextBox DataContext="selectedEmployee"
                                 Margin="3"
                                 Grid.Column="1"
                                 Text="{Binding ContactInfo.Mail}"
                                 x:Name="textBoxMail" />
                        <Label Content="TelefonNummer:"
                               Grid.Column="0"
                               Grid.Row="1"
                               HorizontalAlignment="Right" />
                        <TextBox Text="{Binding ContactInfo.Phone}"
                                 Margin="3"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 x:Name="textBoxPhoneNumber" />
                    </Grid>
                    <Button Content="Opdater/Gem Ny"
                            Width="125"
                            HorizontalAlignment="Right"
                            Margin="0,100,0,0"
                            x:Name="buttonUpdateContactInfo" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
